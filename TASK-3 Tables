#table-1 named as users
CREATE TABLE users (
    user_id VARCHAR(255) PRIMARY KEY,
    pin VARCHAR(4),  -- Assuming a 4-digit PIN for simplicity
    balance DECIMAL(10, 2)  -- Assuming a decimal type for balance
);

#table-2 named as transaction
  CREATE TABLE transaction (
    transaction_id INT AUTO_INCREMENT PRIMARY KEY,
    user_id VARCHAR(255),
    type VARCHAR(255),
    amount DECIMAL(10, 2),
    date DATE,
    FOREIGN KEY (user_id) REFERENCES users(user_id)
);

  
